@model Response<List<EmployeeRoleInfo>>

<div class="action-body-container">
    <div class="main-grid-container">
        <div class="pk-table-wrapper">
            <table class="table table-bordered align-middle table-hover table-responsive">
                <thead>
                    <tr>
                        <th class="header" scope="col">
                            <p class="h5">EmployeeRole Name</p>
                        </th>
                        <th class="header" scope="col">
                            <div class="d-block">
                                <p class="h5 text-right">Actions</p>
                            </div>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.IsSuccess && Model.Data != null && Model.Data.Any())
                    {
                        @foreach (var employeeRole in Model.Data)
                        {
                            <tr>
                                <td scope="row">
                                    @if (!string.IsNullOrWhiteSpace(employeeRole.Name))
                                    {
                                        <p>@employeeRole.Name</p>
                                    }
                                </td>
                                <td scope="row">
                                    <div class="d-flex justify-content-end">
                                        <span class="material-icons-outlined arrow btn-icon btnEditEmployeeRole" id="btnEditEmployeeRole_@employeeRole.Id"
                                              title="Update EmployeeRole" onclick="editEmployeeRole('@employeeRole.Id')">
                                            edit
                                        </span>
                                        <span class="material-icons-outlined arrow btn-icon btnDeleteEmployeeRole" id="btnDeleteEmployeeRole_@employeeRole.Id"
                                              title="Delete EmployeeRole" onclick="deleteEmployeeRole('@employeeRole.Id', '@employeeRole.Name')">
                                            delete
                                        </span>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>