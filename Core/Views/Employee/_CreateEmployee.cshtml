@model EmployeeInfo

@if (Model != null)
{
    <div class="modal fade" data-bs-backdrop="static" id="createEmployeeModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-md modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <b class="modal-title" id="createEmployeeTitle">
                        Create Employee
                    </b>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="EmployeeCreateFormContainer">
                        <div class="row">
                            <div class="col-sm-12">
                                <form id="formCreateEmployee" data-id="@Model.Id" data-isupdate="@(Guid.Empty != Model.Id)" autocomplete="off">
                                    <div class="form-group">
                                        <label for="employeeName" class="form-label">Name <span class="mandatory">*</span></label>
                                        <input id="employeeName" name="employeeName" asp-for="@Model.Name" type="text" class="form-control form-control-sm" aria-describedby="employeeNameHelp"
                                               maxlength="50"
                                               data-err-required="Name is required"
                                               data-err-min-length="Name is too short"
                                               autocomplete="off">
                                        <div id="employeeNameHelp" style="display:none;" class="form-text">Name is case sensitive, ranges between 2 and 50 characters.</div>
                                    </div>
                                    <div class="form-group">
                                        <div id="gradeListDDContainer" class="form-group" data-val="@(Model?.GradeInfo?.Id != Guid.Empty ? Model?.GradeInfo?.Id : "")">
                                            <partial name="~/Views/Common/_GradeList.cshtml" model="null" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div id="locationListDDContainer" class="form-group" data-val="@(Model?.LocationInfo?.Id != Guid.Empty ? Model?.LocationInfo?.Id : "")">
                                            <partial name="~/Views/Common/_LocationList.cshtml" model="null" />
                                        </div>
                                    </div>
                                    <button type="submit" id="btnEmployeeSaveSubmit" class="display-none" />
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button id="btnSaveEmployeeSubmit" onclick="saveEmployee()" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>

    <script src="~/js/employee/employee-validation.js" asp-append-version="true"></script>
}