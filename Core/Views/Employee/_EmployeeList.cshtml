@model Response<List<EmployeeInfo>>

<div class="action-body-container">
    <div class="main-grid-container">
        <div class="pk-table-wrapper">
            <table class="table table-responsive table-bordered align-middle table-hover">
                <thead>
                    <tr>
                        <th class="header" scope="col"><span class="h6 fw-bold">Employee Name</span></th>
                        <th class="header" scope="col"><span class="h6 fw-bold">Employee Location</span></th>
                        <th class="header" scope="col"><span class="h6 fw-bold">Employee Grade</span></th>
                        <th class="header" scope="col"><span class="h6 fw-bold">Total Working Hours</span></th>
                        <th class="header" scope="col"><span class="h6 fw-bold">Actions</span></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.IsSuccess && Model.Data != null && Model.Data.Any())
                    {
                        @foreach (var employee in Model.Data)
                        {
                            <tr>
                                <td scope="row">
                                    @if (!string.IsNullOrWhiteSpace(employee.Name))
                                    {
                                        <p>@employee.Name</p>
                                    }
                                </td>
                                <td scope="row">
                                    @if (employee.LocationInfo != null && !string.IsNullOrWhiteSpace(employee.LocationInfo.Name))
                                    {
                                        <p>@employee.LocationInfo.Name</p>
                                    }
                                </td>
                                <td scope="row">
                                    @if (employee.GradeInfo != null && !string.IsNullOrWhiteSpace(employee.GradeInfo.Name))
                                    {
                                        <p>@employee.GradeInfo.Name</p>
                                    }
                                </td>
                                <td scope="row">
                                    <p>@employee.TotalHours</p>
                                </td>
                                <td scope="row">
                                    <div class ="d-flex justify-content-end">
                                        <span class="material-icons-outlined arrow btn-icon btnEditEmployee" id="btnEditEmployee_@employee.Id"
                                              title="Update Employee" onclick="editEmployee('@employee.Id')">
                                            edit
                                        </span>
                                        <span class="material-icons-outlined arrow btn-icon btnDeleteEmployee" id="btnDeleteEmployee_@employee.Id"
                                              title="Delete Employee" onclick="deleteEmployee('@employee.Id', '@employee.Name')">
                                            delete
                                        </span>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>